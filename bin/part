#!/bin/bash
while getopts ":s:c:" optname
  do
    case "$optname" in
      "s")
        php -S 0.0.0.0:$OPTARG /etc/part/bin/runtime
        exit
        ;;
      "c")
        php /etc/part/bin/compile $OPTARG
        exit
        ;;
      "?")
        echo "Unknown parameter $OPTARG"
        exit
        ;;
      ":")
        echo "No argument value for parameter $OPTARG"
        exit
        ;;
      *)
        echo "Unknown error while processing parameter"
        exit
        ;;
    esac
  done
php /etc/part/bin/cli $1
exit
